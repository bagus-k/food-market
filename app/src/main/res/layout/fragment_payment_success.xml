<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="100dp"
    android:orientation="vertical"
    tools:context=".ui.detail.PaymentSuccessFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/img_logo"
        android:src="@drawable/ic_success_order"
        android:layout_width="200dp"
        android:layout_height="201dp"/>

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextView.PoppinsNormal20sp8D92A3"
        android:layout_marginTop="30dp"
        android:text="Youâ€™ve Made Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_subtitle"
        style="@style/TextView.PoppinsNormal300w14sp8D92A3"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        android:text="Just stay at home while we are\npreparing your best foods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_order_other_food"
        android:text="Order Other Food"
        android:textAllCaps="false"
        android:padding="8dp"
        android:layout_marginTop="30dp"
        style="@style/Button.Primary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_view_my_order"
        android:text="View My order"
        android:textAllCaps="false"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        style="@style/Button.Secondary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

</LinearLayout>